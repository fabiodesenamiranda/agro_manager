<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-6">
    <h2 class="text-2xl font-bold text-center text-gray-800">Login</h2>
    <p class="text-sm text-center text-gray-600 mt-2">
      Bem-vindo de volta! Por favor, insira seus dados para continuar.
    </p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'mt-6' }) do |f| %>
      <!-- Campo de Email -->
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
      </div>

      <!-- Campo de Senha -->
      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full" %>
      </div>

      <!-- Lembrar-me -->
      <div class="flex items-center justify-between mb-4">
        <label class="flex items-center">
          <%= f.check_box :remember_me, class: "checkbox checkbox-primary" %>
          <span class="ml-2 text-gray-600 text-sm">Lembrar-me</span>
        </label>
        <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "text-sm text-purple-500 hover:underline" %>
      </div>

      <!-- Botão de Login -->
      <div>
        <%= f.submit "Entrar", class: "btn btn-primary w-full" %>
      </div>
    <% end %>

    <!-- Links Adicionais -->
    <p class="mt-4 text-center text-gray-600 text-sm">
      Não tem uma conta? <%= link_to "Registrar-se", new_registration_path(resource_name), class: "text-purple-500 hover:underline" %>
    </p>
  </div>
</div>
