<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white shadow-lg rounded-lg overflow-hidden flex w-3/4 lg:w-2/3 max-w-4xl">
    <!-- Esquerda: Informações -->
    <div class="hidden lg:block w-1/2 bg-gray-200 p-8">
      <div class="flex items-center space-x-4 mb-4">
        <div class="bg-purple-500 text-white rounded-full h-10 w-10 flex items-center justify-center">
          AM
        </div>
        <h1 class="text-2xl font-bold text-gray-800">Agro Manager</h1>
      </div>
      <p class="text-gray-600">Admin Dashboard Starter Kit</p>
      <ul class="mt-6 space-y-2 text-gray-700">
        <li>✓ Light/dark mode toggle</li>
        <li>✓ Redux toolkit and other utility libraries configured</li>
        <li>✓ User-friendly documentation</li>
        <li>✓ DaisyUI components, Tailwind CSS support</li>
      </ul>
    </div>

    <!-- Direita: Formulário de Registro -->
    <div class="w-full lg:w-1/2 p-8">
      <h2 class="text-2xl font-bold text-center text-gray-800">Cadastre-se</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'mt-6' }) do |f| %>
        <div class="mb-4">
          <%= f.label :name, class: "block text-gray-700" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input input-bordered w-full" %>
        </div>
        <div class="mb-4">
          <%= f.label :email, class: "block text-gray-700" %>
          <%= f.email_field :email, autocomplete: "email", class: "input input-bordered w-full" %>
        </div>
        <div class="mb-4">
          <%= f.label :password, class: "block text-gray-700" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full" %>
        </div>
        <div class="mb-4">
          <%= f.label :password_confirmation, class: "block text-gray-700" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
        </div>
        <div>
          <%= f.submit "Register", class: "btn btn-primary w-full" %>
        </div>
      <% end %>
      <p class="mt-4 text-center text-gray-600">
        Já tem? <%= link_to "Login", new_session_path(resource_name), class: "text-purple-500" %>
      </p>
    </div>
  </div>
</div>
