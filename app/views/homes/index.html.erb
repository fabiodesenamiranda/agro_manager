<% content_for :title, "Home" %>

<%= current_user.email %>
<%= link_to destroy_user_session_path, data: { turbo_method: :delete } do %>
  Fazer Logoff
<% end %>


<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Home</h1>
    <%= link_to "New home", new_home_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="homes" class="min-w-full">
    <% if @homes.any? %>
      <% @homes.each do |home| %>
        <%= render home %>
        <p>
          <%= link_to "Show this home", home, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
        </p>
      <% end %>
    <% else %>
      <p class="text-center my-10">No homes found.</p>
    <% end %>
  </div>
</div>
